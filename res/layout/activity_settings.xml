<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#000000" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextViewMinMovement"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:text="Min Movement"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/TextViewMinWheelMovement"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:height="10dp"
            android:text="Min Wheel Movement"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/TextViewMillisecondstoUpdate"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:height="10dp"
            android:text="Update refresh"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textViewAcceleration"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:height="10dp"
            android:text="Acceleration"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/TextViewPort"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:height="10dp"
            android:text="Port"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/EditTextMinMovement"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:gravity="right"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/EditTextMinWheelMovement"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:gravity="right"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/EditTextMillisecondstoUpdate"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:gravity="right"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/EditTextAcceleration"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:gravity="right"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/editTextPort"
            android:layout_width="69dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:inputType="number"
            android:maxLength="5"
            android:textColor="#FFFFFF" >

            <requestFocus />
        </EditText>
    </LinearLayout>

</LinearLayout>